@model BandasWeb.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}
<script>
   $(document).ready(function () {
       $("#esconder").hide();
       $(".casilla").on("change", function () {
           $(".casilla").not(this).attr("checked", false);
       });
        $("#check").change(function (event) {
            if ($("#tipo_usuario_dueño").is(':checked')) {
                $("#esconder").show();  // checked

            } else {
                $("#esconder").hide();  // unchecked

        }

        });



